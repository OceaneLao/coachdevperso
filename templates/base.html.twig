<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Homepage
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link rel="stylesheet" href="{{ asset("font-awesome-4.7.0/css/font-awesome.css") }}">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="flex flex-col min-h-screen">

		<header class="sticky top-0 bg-pink text-white">
			<div class="container mx-auto flex flex-row items-center justify-center">
				<div class="basis-1/2 flex flex-row items-center justify-center p-5">
					<img class="w-10" src="{{ asset("img/logo.png") }}" alt="Logo lotus">
					<p class="ps-5 pe-5">Coach Développement Personnel - May-Dia Yang</p>
				</div>

				<div class="basis-1/2">
					<ul class="flex flex-wrap items-center justify-center">
						<li class="p-5">
							<a href="{{ path("home") }}">
								Homepage
							</a>
						</li>
						<li class="p-5">
							<a href="">
								Appointment
							</a>
						</li>
						<li class="p-5">
							<a href="{{ path("about") }}">
								About
							</a>
						</li>
						<li class="p-5">
							<a href="{{ path("contact") }}">
								Contact
							</a>
						</li>
						<li class="p-5">
							<button id="open-modal-btn">
								<i class="fa fa-user-circle fa-lg"></i>
							</button>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</body>
</html></header>{% block body %}
{% block content %}{% endblock %}{% endblock %}<footer class="mt-auto bg-pink text-white">
<div class="container mx-auto">
	<ul class="flex flex-row justify-center items-center">
		<li class="p-5">
			<a href="">
				Privacy policy
			</a>
		</li>
		<li class="p-5">
			<a href="">
				Legal notice
			</a>
		</li>
		<li class="p-5">
			<a href="">
				General Conditions of Use and Sales
			</a>
		</li>
	</ul>
</div></footer>

{# Modal wrapper #}<div id="modal-wrapper" class="fixed z-10 inset-0 hidden">
<div
	class="flex items-center justify-center min-h-screen bg-blue bg-opacity-50 transition-all">
	{# Modal box #}
	<div class="bg-white p-10 flex flex-col justify-center items-center">
		<span id="close-modal-btn" class="text-blue px-10 py-3 my-3">
			<i class="fa fa-times" aria-hidden="true"></i>
		</span>

		{% if is_granted('ROLE_USER') %}
		<a href="">
			<button class="bg-blue border-2 border-blue rounded-full text-white px-10 py-3 my-3">
				Edit
			</button>
		</a>

		<a href="{{ path('app_logout') }}">
			<button class="bg-white border-2 border-blue rounded-full text-blue px-10 py-3 my-3">
				Logout
			</button>
		</a>

		{% else %}

		<a href="{{ path('app_login') }}">
			<button class="bg-blue border-2 border-blue rounded-full text-white px-10 py-3 my-3">
				Login
			</button>
		</a>

		<a href="{{ path('app_register') }}">
			<button class="bg-blue border-2 border-blue rounded-full text-white px-10 py-3 my-3">
				Register
			</button>
		</a>
		{% endif %}
	</div>
</div>

<script>
	document.getElementById("open-modal-btn").addEventListener("click", () => {
document.getElementById("modal-wrapper").classList.remove("hidden")
})

document.getElementById("close-modal-btn").addEventListener("click", () => {
document.getElementById("modal-wrapper").classList.add("hidden")
})
</script></body></html>
