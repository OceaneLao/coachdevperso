{% block body %}
<div class="container mx-auto w-9/12 flex flex-col justify-center py-10">
		<h2 class="text-3xl text-blue font-bold text-center">
			Contact
		</h2>
		<form class="text-center">
			<div class="flex flex-row">
				<input id="lastname" type="text" class="border ps-5 py-2 w-full my-2 me-1" placeholder="Enter your last name">
