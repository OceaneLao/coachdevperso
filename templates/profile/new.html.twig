{% extends 'base.html.twig' %}

{% block title %}Cr√©ez votre profil
{% endblock %}

{% block body %}
	<div class="container mx-auto py-10">
		<div class="flex flex-col justify-center items-center">
			<h1 class="font-neuton text-3xl text-blue font-bold pb-5">
				Votre profil
			</h1>
		
		{% for profile in profiles %}
			<img src="{{ asset('uploads/profiles/' ~ profile.picture) }}" alt="Image du profil" class="w-96">
				<p>
					{{ profile.description }}
				</p>
		{% endfor %}
			{% for flashError in app.flashes ('error') %}
				<div class='text-red'>
					{{ flashError }}
				</div>
			{% endfor %}

			{% for flashSuccess in app.flashes ('success') %}
				<div class='text-green'>
					{{ flashSuccess }}
				</div>
			{% endfor %}

			{{ form_start(form, 
			{'attr' : 
				{'class': 'w-9/12 text-center'}}
			)}}
			{{ form_row(form.picture) }}
			{{ form_row(form.description) }}
			<button type="submit" class="bg-blue border border-blue rounded-full text-white w-48 py-3 mt-5">
				Enregistrer
			</button>
			{{form_end(form)}}

		<a href="">
			<button class="bg-white border border-blue rounded-full text-blue w-48 py-3 mt-5">
				Editer
			</button>
		</a>
		</div>
	</div>
{% endblock %}

